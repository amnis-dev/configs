{
  "compilerOptions": {
    "outDir": "./.lib",
    "declarationDir": "./.lib",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "esnext"
    ],
    "target": "ESNext",
    "module": "NodeNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "types": [
      "node",
      "jest"
    ]
  }
}