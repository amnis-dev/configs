{
  "compilerOptions": {
    "outDir": "./.dist",
    "declarationDir": "./.dist",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "esnext"
    ],
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "types": ["node"]
  }
}